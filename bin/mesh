#!/usr/bin/env node

var meshcli = require('../lib/mesh'),
	fs = require('fs'),
	path = require('path'),
	program = require('commander');
	
function progInit() {
	program.usage('[options] action (default action = update)');
	program.option('-p, --path [path]', 'Target output path (default to current directory)');
	program.options('--hostname [hostname]', 'CouchDB host (default: localhost)');
	program.options('--port [port]', 'CouchDB port (default: 5984)');
	program.options('--protocol [protocol]', 'CouchDB protocol (default: http)');
	program.parse(process.argv);
	
	meshcli.init(program, function(err, mesh) {
		if (! err) {
			// determine the greenslide action to run
			var action = mesh[program.args] || mesh.update;
	
			// run the action
			action.call(mesh, program);
		}
		else {
			console.error(err);
		}
	});
} // progInit
	
fs.readFile(path.join(__dirname, '../package.json'), 'utf8', function(err, contents) {
	if (! err) {
		var packageData = JSON.parse(contents);
		
		program.version(packageData.version);
	} // if

	progInit();
});